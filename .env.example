# Base de datos (PostgreSQL - Neon o cualquier Postgres)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Seguridad
JWT_SECRET=cambiar-por-un-secreto-largo-y-aleatorio

# APIs de IA — No se requiere OpenAI, todo funciona con Anthropic
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Email (SMTP) — Opcional, si no se configura los emails se loguean a consola
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alertas@tudominio.com
SMTP_PASS=xxxx
SMTP_FROM=Centro Hogar Sanchez <alertas@tudominio.com>

# Resumen diario — hora y minuto (Europe/Madrid)
DAILY_SUMMARY_HOUR=7
DAILY_SUMMARY_MINUTE=0

# Integración externa — Si no se configura, los endpoints de integración devuelven 403
INTEGRATION_API_KEY=

# Servidor
PORT=5000
NODE_ENV=production

# URL base para llamadas HTTP internas (agente IA -> API de integracion)
# En Docker/Coolify: usar la URL interna del servicio (ej: http://app:5000 o https://tudominio.com)
# Si no se configura, usa http://localhost:${PORT} (solo funciona en local)
BASE_URL=
